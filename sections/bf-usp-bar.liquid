{%- if section.settings.usp_1 != blank or section.settings.usp_2 != blank or section.settings.usp_3 != blank -%}
  <div class="bf-usp-bar color-{{ section.settings.color_scheme }} gradient">
    <div class="page-width">
      <ul class="bf-usp-list" role="list">
        {%- for i in (1..3) -%}
          {%- assign text = section.settings["usp_" | append: i] -%}
          {%- assign link = section.settings["link_" | append: i] -%}
          {%- if text != blank -%}
            <li class="bf-usp-item">
              {%- if section.settings.show_icons -%}
                <span class="bf-usp-icon">{%- render 'icon-checkmark' -%}</span>
              {%- endif -%}
              {%- if link != blank -%}
                <a href="{{ link }}" class="bf-usp-text">{{ text | escape }}</a>
              {%- else -%}
                <span class="bf-usp-text">{{ text | escape }}</span>
              {%- endif -%}
            </li>
          {%- endif -%}
        {%- endfor -%}
      </ul>
    </div>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "USP bar",
  "class": "section-bf-usp-bar",
  "settings": [
    {
      "type": "text",
      "id": "usp_1",
      "label": "USP 1",
      "default": "Handmade craftsmanship"
    },
    {
      "type": "url",
      "id": "link_1",
      "label": "USP 1 link"
    },
    {
      "type": "text",
      "id": "usp_2",
      "label": "USP 2",
      "default": "Express shipping"
    },
    {
      "type": "url",
      "id": "link_2",
      "label": "USP 2 link"
    },
    {
      "type": "text",
      "id": "usp_3",
      "label": "USP 3",
      "default": "Easy returns"
    },
    {
      "type": "url",
      "id": "link_3",
      "label": "USP 3 link"
    },
    {
      "type": "checkbox",
      "id": "show_icons",
      "label": "Show icons",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "USP bar"
    }
  ]
}
{% endschema %}
